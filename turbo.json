{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {},
    "coverage": {
      "outputs": ["coverage/**"]
    },
    "lint": {},
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "outputs": ["test-results/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {},
    "clean": {
      "cache": false
    }
  }
}
