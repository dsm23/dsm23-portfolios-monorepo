{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "BROWSERLESS_TOKEN",
    "CHROME_EXECUTABLE_PATH",
    "CONTENTFUL_SPACE_ID",
    "CONTENTFUL_ACCESS_TOKEN",
    "CONTENTFUL_PREVIEW_TOKEN",
    "CONTENTFUL_REVALIDATE_SECRET",
    "ORIGIN_URL"
  ],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {},
    "coverage": {
      "outputs": ["coverage/**"]
    },
    "lint": {},
    "lint:css": {},
    "lint:js": {},
    "lint:lint-staged": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "outputs": ["test-results/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {},
    "clean": {
      "cache": false
    }
  }
}
