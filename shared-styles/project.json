{
  "name": "shared-styles",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "shared-styles/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/shared-styles",
        "main": "shared-styles/src/index.ts",
        "tsConfig": "shared-styles/tsconfig.lib.json",
        "assets": ["shared-styles/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "shared-styles/jest.config.ts"
      }
    }
  },
  "tags": []
}
